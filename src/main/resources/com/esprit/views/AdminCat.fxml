<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.StackPane?>

<BorderPane stylesheets="@../styles/uniclubs.css,@../styles/no-scrollbar.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.AdminCategorie">
    <left>
        <!-- Sidebar Navigation - Modernisé -->
        <VBox fx:id="sidebar" alignment="TOP_CENTER" prefHeight="610.0" prefWidth="230.0" spacing="15.0" styleClass="sidebar" style="-fx-background-color: linear-gradient(to bottom, #040f71, #1e3a8a); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 0);">
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="25.0" />
            </padding>

            <!-- Application Logo - Modernisé -->
            <HBox alignment="CENTER" spacing="10.0" styleClass="logo-container">
                <StackPane>
                    <Circle radius="25" style="-fx-fill: white;"/>
                    <Label styleClass="logo-icon" text="UC" style="-fx-text-fill: #040f71; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Label>
                </StackPane>
                <Label styleClass="logo-text" text="UNICLUBS" style="-fx-text-fill: white;">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </HBox>

            <Separator style="-fx-background-color: rgba(255,255,255,0.2);">
                <VBox.margin>
                    <Insets bottom="20.0" top="20.0" />
                </VBox.margin>
            </Separator>

            <!-- Admin Info - Amélioré -->
            <StackPane>
                <Circle radius="40" style="-fx-fill: rgba(255,255,255,0.1);"/>
                <Label text="👤" style="-fx-font-size: 30;">
                </Label>
            </StackPane>

            <Label fx:id="adminNameLabel" styleClass="admin-name" text="Admin Name" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <Label styleClass="admin-role" text="Administrator" style="-fx-text-fill: rgba(255,255,255,0.7);">
                <font>
                    <Font name="System Italic" size="14.0" />
                </font>
            </Label>

            <Separator style="-fx-background-color: rgba(255,255,255,0.2);">
                <VBox.margin>
                    <Insets bottom="20.0" top="20.0" />
                </VBox.margin>
            </Separator>

            <!-- Menu Items - Modernisés -->
            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                <Button fx:id="userManagementButton" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: rgba(255,255,255,0); -fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14; -fx-padding: 12 15;" text="User Management">
                    <graphic>
                        <Label text="👤" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>

                <Button fx:id="clubManagementButton" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="sidebar-button, active" style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 12 15;" text="Club Management">
                    <graphic>
                        <Label text="🏛" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>

                <Button fx:id="eventManagementButton" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: rgba(255,255,255,0); -fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14; -fx-padding: 12 15;" text="Event Management">
                    <graphic>
                        <Label text="📅" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>

                <Button fx:id="productOrdersButton" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: rgba(255,255,255,0); -fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14; -fx-padding: 12 15;" text="Products &amp; Orders">
                    <graphic>
                        <Label text="🛒" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>

                <Button fx:id="competitionButton" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: rgba(255,255,255,0); -fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14; -fx-padding: 12 15;" text="Competition &amp; Season">
                    <graphic>
                        <Label text="🏆" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>

                <Button fx:id="surveyButton" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: rgba(255,255,255,0); -fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14; -fx-padding: 12 15;" text="Survey Management">
                    <graphic>
                        <Label text="📊" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>

                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </VBox>

            <!-- Bottom Menu Options - Modernisés -->
            <VBox spacing="8.0">
                <Button fx:id="profileButton" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: rgba(255,255,255,0); -fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14; -fx-padding: 12 15;" text="My Profile">
                    <graphic>
                        <Label text="👤" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>

                <Button fx:id="logoutButton" alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#handleLogout" styleClass="sidebar-button, sidebar-button-logout" style="-fx-background-color: rgba(220,53,69,0.2); -fx-background-radius: 8; -fx-text-fill: #ff9999; -fx-font-size: 14; -fx-padding: 12 15;" text="Logout">
                    <graphic>
                        <Label text="🚪" style="-fx-font-size: 16;" />
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <BorderPane prefHeight="646.0" prefWidth="930.0" style="-fx-background-color: #f6f9fe;">
            <!-- Top Header Bar - Amélioré -->
            <top>
                <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="dashboard-header" style="-fx-background-color: white; -fx-padding: 15 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-text-fill: #040f71; -fx-font-weight: bold;" styleClass="dashboard-title" text="Category Management">
                        <font>
                            <Font name="System Bold" size="32.0" />
                        </font>
                    </Label>

                    <HBox alignment="CENTER_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS">
                        <!-- Search Box - Embelli -->
                        <HBox alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-background-radius: 30; -fx-border-color: #e9ecef; -fx-border-radius: 30; -fx-padding: 5;">
                            <Label text="🔍" style="-fx-font-size: 14; -fx-text-fill: #6c757d; -fx-padding: 0 0 0 10;" />
                            <TextField fx:id="searchField" prefWidth="250.0" promptText="Search categories..." style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 8 15;">
                                <font>
                                    <Font name="System" size="14" />
                                </font>
                            </TextField>
                        </HBox>

                        <!-- Date Display -->
                        <Label fx:id="dateLabel" style="-fx-text-fill: #6c757d; -fx-padding: 0 20 0 0;" text="Today: Wednesday, April 30, 2025">
                            <font>
                                <Font name="System Italic" size="14" />
                            </font>
                        </Label>
                    </HBox>
                </HBox>
            </top>

            <!-- Main Content - Now in a ScrollPane -->
            <center>
                <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: #f6f9fe; -fx-background: #f6f9fe; -fx-border-color: #f6f9fe;">
                    <VBox prefHeight="800.0" prefWidth="852.0" spacing="20" style="-fx-padding: 20 30; -fx-background-color: #f6f9fe;">
                        <!-- Header Section - Simplifié -->
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <VBox>
                                <Label style="-fx-text-fill: #040f71; -fx-font-weight: bold;" text="Categories">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label style="-fx-text-fill: #6c757d;" text="Manage all your club categories from here">
                                    <font>
                                        <Font name="System" size="16.0" />
                                    </font>
                                </Label>
                            </VBox>
                        </HBox>

                        <!-- Stats Cards Row - Modernisé -->
                        <HBox spacing="20">
                            <!-- Stats Card 1 - Embelli -->
                            <VBox maxWidth="300.0" minWidth="220" prefHeight="100.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <StackPane>
                                        <Circle radius="25" style="-fx-fill: rgba(4,15,113,0.1);"/>
                                        <Label text="📊" style="-fx-font-size: 20;"/>
                                    </StackPane>
                                    <VBox>
                                        <Label style="-fx-text-fill: #6c757d;" text="Total Categories">
                                            <font>
                                                <Font name="System" size="16.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="totalCategoriesLabel" style="-fx-text-fill: #040f71; -fx-font-weight: bold;" text="24">
                                            <font>
                                                <Font name="System Bold" size="28.0" />
                                            </font>
                                        </Label>
                                    </VBox>
                                </HBox>
                            </VBox>

                            <!-- Stats Card 2 - Embelli -->
                            <VBox maxWidth="300.0" minWidth="220" prefHeight="100.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <StackPane>
                                        <Circle radius="25" style="-fx-fill: rgba(40,167,69,0.1);"/>
                                        <Label text="🔝" style="-fx-font-size: 20;"/>
                                    </StackPane>
                                    <VBox>
                                        <Label style="-fx-text-fill: #6c757d;" text="Most Popular">
                                            <font>
                                                <Font name="System" size="16.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="popularCategoryLabel" style="-fx-text-fill: #28a745; -fx-font-weight: bold;" text="Sports">
                                            <font>
                                                <Font name="System Bold" size="28.0" />
                                            </font>
                                        </Label>
                                    </VBox>
                                </HBox>
                            </VBox>

                            <Region prefWidth="100" HBox.hgrow="ALWAYS" />
                        </HBox>

                        <!-- Main Content Row - Réorganisé et embelli -->
                        <HBox spacing="20" prefHeight="450.0">
                            <!-- Left Column: Add Category + PieChart -->
                            <VBox spacing="20" minWidth="350.0" prefWidth="350.0" HBox.hgrow="NEVER">
                                <!-- Add Category Panel - Modernisé -->
                                <VBox prefHeight="220.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);">
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <StackPane>
                                            <Circle radius="20" style="-fx-fill: rgba(30,144,255,0.1);"/>
                                            <Label text="➕" style="-fx-font-size: 16;"/>
                                        </StackPane>
                                        <Label style="-fx-text-fill: #333333; -fx-font-weight: bold;" text="Add New Category">
                                            <font>
                                                <Font name="System Bold" size="20.0" />
                                            </font>
                                        </Label>
                                    </HBox>

                                    <Label style="-fx-text-fill: #6c757d; -fx-font-weight: bold;" text="Category Name">
                                        <font>
                                            <Font name="System" size="14" />
                                        </font>
                                    </Label>

                                    <TextField fx:id="nomcattf"
                                               prefHeight="45.0"
                                               prefWidth="300.0"
                                               maxWidth="300.0"
                                               promptText="Enter category name"
                                               style="-fx-background-color: #f8f9fa;
                                                      -fx-background-radius: 10;
                                                      -fx-border-color: #e9ecef;
                                                      -fx-border-radius: 10;
                                                      -fx-padding: 10 15;">
                                        <font>
                                            <Font name="System" size="14" />
                                        </font>
                                    </TextField>

                                    <Button fx:id="ajoutercat"
                                            prefWidth="300.0"
                                            prefHeight="45.0"
                                            onAction="#insererCategorie"
                                            style="-fx-background-color: #1e90ff;
                                                   -fx-text-fill: white;
                                                   -fx-background-radius: 10;
                                                   -fx-padding: 12;
                                                   -fx-font-weight: bold;"
                                            text="Add Category">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                        <graphic>
                                            <Label text="➕" style="-fx-text-fill: white; -fx-font-size: 14;" />
                                        </graphic>
                                        <effect>
                                            <DropShadow color="#1e90ff33" radius="10" spread="0.1" />
                                        </effect>
                                    </Button>
                                </VBox>

                                <!-- PieChart Panel - Déplacé et modernisé -->
                                <VBox prefHeight="400.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);" VBox.vgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <StackPane>
                                            <Circle radius="20" style="-fx-fill: rgba(41,128,185,0.1);"/>
                                            <Label text="📊" style="-fx-font-size: 16;"/>
                                        </StackPane>
                                        <Label style="-fx-text-fill: #333333; -fx-font-weight: bold;" text="Category Distribution">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </HBox>

                                    <!-- PieChart avec légende visible -->
                                    <PieChart fx:id="categoryUsagePieChart" labelsVisible="true" legendSide="RIGHT" prefHeight="330.0" VBox.vgrow="ALWAYS">
                                        <VBox.margin>
                                            <Insets top="10" />
                                        </VBox.margin>
                                    </PieChart>
                                </VBox>
                            </VBox>

                            <!-- Right Column: Categories List Panel - Élargi -->
                            <VBox prefHeight="640.0" prefWidth="800.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <StackPane>
                                        <Circle radius="20" style="-fx-fill: rgba(39,174,96,0.1);"/>
                                        <Label text="📋" style="-fx-font-size: 16;"/>
                                    </StackPane>
                                    <Label style="-fx-text-fill: #333333; -fx-font-weight: bold;" text="Available Categories">
                                        <font>
                                            <Font name="System Bold" size="20.0" />
                                        </font>
                                    </Label>
                                </HBox>

                                <!-- Filter and Refresh Bar -->
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <Button fx:id="allFilterButton" style="-fx-background-color: #1e90ff; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 20; -fx-font-weight: bold;" text="All">
                                        <font>
                                            <Font name="System Bold" size="13" />
                                        </font>
                                    </Button>

                                    <Button fx:id="inactiveFilterButton" style="-fx-background-color: #f8f9fa; -fx-text-fill: #6c757d; -fx-background-radius: 20; -fx-padding: 8 20; -fx-font-weight: bold;" text="Inactive">
                                        <font>
                                            <Font name="System Bold" size="13" />
                                        </font>
                                    </Button>

                                    <Region HBox.hgrow="ALWAYS" />

                                    <Button fx:id="refreshButton" onAction="#handleRefresh" style="-fx-background-color: #f8f9fa; -fx-text-fill: #6c757d; -fx-background-radius: 20; -fx-padding: 8 20; -fx-font-weight: bold;" text="Refresh">
                                        <font>
                                            <Font name="System Bold" size="13" />
                                        </font>
                                        <graphic>
                                            <Label text="🔄" style="-fx-font-size: 13;" />
                                        </graphic>
                                    </Button>
                                </HBox>

                                <!-- Category List - Modernisé -->
                                <ListView fx:id="categoriesListView" maxHeight="Infinity" prefHeight="450.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #f0f0f0; -fx-border-radius: 10; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-font-size: 14px;" VBox.vgrow="ALWAYS">
                                </ListView>

                                <!-- Footer with Pagination - Embelli -->
                                <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                                    <Label fx:id="paginationInfoLabel" style="-fx-text-fill: #6c757d;" text="Showing 1-10 of 24 categories">
                                        <font>
                                            <Font name="System" size="13" />
                                        </font>
                                    </Label>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </center>

            <!-- Footer - Modernisé -->
            <bottom>
                <HBox alignment="CENTER" styleClass="dashboard-footer" style="-fx-background-color: white; -fx-padding: 15;">
                    <Label styleClass="footer-text" style="-fx-text-fill: #6c757d;" text="© 2025 UNICLUBS - Admin Dashboard v1.0" />
                </HBox>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>