<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.controllers.ShowClubsController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../styles/home.css">

    <!-- Header Section -->
    <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="15" right="25" bottom="15" left="25"/>
        </padding>

        <!-- Logo -->
        <ImageView fitHeight="50" fitWidth="120" preserveRatio="true">
            <Image url="@../images/logo.png"/>
        </ImageView>

        <!-- Navigation Bar -->
        <HBox spacing="25" alignment="CENTER" HBox.hgrow="ALWAYS" styleClass="nav-container">
            <Button text="Home" styleClass="nav-button"/>
            <Button text="Polls" styleClass="nav-button"/>
            <!-- Clubs Dropdown -->
            <StackPane fx:id="clubsContainer" styleClass="nav-dropdown-container" onMouseExited="#hideClubsDropdown">
                <Button fx:id="clubsButton" text="Clubs" styleClass="nav-button-selected" onMouseEntered="#showClubsDropdown"/>
                <VBox fx:id="clubsDropdown" styleClass="nav-dropdown-menu" visible="false" managed="false" onMouseEntered="#showClubsDropdown">
                    <HBox fx:id="clubMembersItem" styleClass="dropdown-item" onMouseClicked="#navigateToClubs">
                        <Label text="ðŸ‘¥" styleClass="dropdown-item-icon"/>
                        <Label text="Club Management" styleClass="dropdown-item-text"/>
                    </HBox>
                    <Separator styleClass="dropdown-divider"/>
                    <HBox styleClass="dropdown-item" onMouseClicked="#navigateToMyClub">
                        <Label text="ðŸ†" styleClass="dropdown-item-icon"/>
                        <Label text="My Club" styleClass="dropdown-item-text"/>
                    </HBox>
                </VBox>
            </StackPane>
            <Button text="Events" styleClass="nav-button"/>
            <Button text="Products" styleClass="nav-button"/>
            <Button text="Competition" styleClass="nav-button"/>
        </HBox>

        <!-- User Profile and Contact Us -->
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <!-- User Profile Section -->
            <StackPane fx:id="userProfileContainer" styleClass="user-profile-container" onMouseEntered="#showProfileDropdown" onMouseExited="#hideProfileDropdown">
                <HBox spacing="10" alignment="CENTER" styleClass="user-profile-content">
                    <ImageView fx:id="userProfilePic" fitHeight="45" fitWidth="45" styleClass="profile-pic">
                        <Image url="@../images/default-profile-png.png"/>
                    </ImageView>
                    <Label fx:id="userNameLabel" text="John Doe" styleClass="user-name"/>
                </HBox>
                <!-- Profile Dropdown -->
                <VBox fx:id="profileDropdown" styleClass="profile-dropdown" visible="false" managed="false">
                    <Button text="My Profile" styleClass="dropdown-item" onAction="#navigateToProfile"/>
                    <Separator styleClass="dropdown-divider"/>
                    <Button text="Logout" styleClass="dropdown-item" onAction="#handleLogout"/>
                </VBox>
            </StackPane>
            <Button text="Contact Us" styleClass="contact-button"/>
        </HBox>
    </HBox>

    <!-- Search bar -->
    <TextField fx:id="searchField" promptText="ðŸ” Search by club name..."
               prefWidth="250.0"
               styleClass="hero-description"
               AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="275.0" AnchorPane.rightAnchor="275.0"
               onKeyReleased="#handleSearch"/>

    <!-- Top section for pagination and Create Club button -->
    <HBox alignment="CENTER_RIGHT"
          prefHeight="50.0"
          spacing="10"
          AnchorPane.topAnchor="130.0"
          AnchorPane.rightAnchor="10.0"
          AnchorPane.leftAnchor="10.0">
        <!-- Pagination controls -->
        <Button fx:id="prevButton" text="Previous"
                onAction="#previousPage"
                styleClass="event-button"
                prefHeight="30.0" prefWidth="90.0"/>
        <Label fx:id="pageLabel" text="Page 1"
               styleClass="event-time"/>
        <Button fx:id="nextButton" text="Next"
                onAction="#nextPage"
                styleClass="event-button"
                prefHeight="30.0" prefWidth="90.0"/>
        <!-- Create Club button -->
        <Button fx:id="createClubButton" text="CREATE CLUB"
                onAction="#handleCreateClub"
                styleClass="hero-button"
                prefHeight="35.0" prefWidth="130.0"/>
    </HBox>

    <!-- ScrollPane for club cards -->
    <ScrollPane fitToWidth="true"
                styleClass="content-scroll"
                AnchorPane.topAnchor="180.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">
        <content>
            <FlowPane fx:id="clubCardContainer"
                      hgap="15"
                      vgap="15"
                      prefWrapLength="750"
                      styleClass="content-container">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <!-- Sample club card with Participate button (to be removed and generated dynamically in controller) -->
                <VBox styleClass="club-card" prefWidth="300.0" prefHeight="300.0" alignment="CENTER">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <!-- Placeholder for card content (e.g., image, title) -->
                    <ImageView fitHeight="150" fitWidth="280" preserveRatio="false"/>
                    <VBox styleClass="club-content">
                        <Label text="Club Name" styleClass="club-name"/>
                        <Label text="Description or details" styleClass="club-description" wrapText="true"/>
                        <Label text="1520 Points" styleClass="club-points"/>
                        <Button text="Participate" styleClass="event-button" prefHeight="30.0" prefWidth="100.0" VBox.vgrow="NEVER"/>
                    </VBox>
                </VBox>
            </FlowPane>
        </content>
    </ScrollPane>
</AnchorPane>