<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.controllers.ShowClubsController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Search bar -->
    <TextField fx:id="searchField" promptText="🔍 Search by club name..."
               prefWidth="250.0"
               style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #b0bec5; -fx-padding: 8 12 8 12; -fx-font-family: 'Arial'; -fx-font-size: 14; -fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-text-fill: #333;"
               AnchorPane.topAnchor="15.0" AnchorPane.leftAnchor="275.0" AnchorPane.rightAnchor="275.0"
               onKeyReleased="#handleSearch"/>

    <!-- Top section for pagination and Create Club button -->
    <HBox alignment="CENTER_RIGHT"
          prefHeight="50.0"
          spacing="10"
          AnchorPane.topAnchor="55.0"
          AnchorPane.rightAnchor="10.0"
          AnchorPane.leftAnchor="10.0">
        <!-- Pagination controls -->
        <Button fx:id="prevButton" text="Previous"
                onAction="#previousPage"
                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12; -fx-background-radius: 15; -fx-padding: 8 15 8 15;"
                styleClass="pagination-button"
                prefHeight="30.0" prefWidth="90.0"/>
        <Label fx:id="pageLabel" text="Page 1"
               style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 5 15 5 15; -fx-background-color: #f5f5f5; -fx-background-radius: 10;"/>
        <Button fx:id="nextButton" text="Next"
                onAction="#nextPage"
                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12; -fx-background-radius: 15; -fx-padding: 8 15 8 15;"
                styleClass="pagination-button"
                prefHeight="30.0" prefWidth="90.0"/>
        <!-- Create Club button -->
        <Button fx:id="createClubButton" text="CREATE CLUB"
                onAction="#handleCreateClub"
                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 15; -fx-padding: 8 20 8 20;"
                styleClass="create-club-button"
                prefHeight="35.0" prefWidth="130.0"/>
    </HBox>

    <!-- ScrollPane for club cards -->
    <ScrollPane fitToWidth="true"
                AnchorPane.topAnchor="110.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">
        <content>
            <FlowPane fx:id="clubCardContainer"
                      hgap="15"
                      vgap="15"
                      prefWrapLength="750">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <!-- Sample club card with Participate button (to be removed and generated dynamically in controller) -->
                <VBox style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-radius: 5;"
                      prefWidth="200.0" prefHeight="250.0" alignment="CENTER">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <!-- Placeholder for card content (e.g., image, title) -->
                    <Label text="Club Name"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Description or details"
                           style="-fx-font-size: 12px;"
                           wrapText="true"/>
                    <!-- Participate button -->
                    <Button text="Participate"
                            style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefHeight="30.0" prefWidth="100.0"
                            VBox.vgrow="NEVER"/>
                </VBox>
            </FlowPane>
        </content>
    </ScrollPane>
</AnchorPane>