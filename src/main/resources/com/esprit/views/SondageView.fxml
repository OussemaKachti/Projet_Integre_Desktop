<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="750.0" prefWidth="1200.0" styleClass="main-container" stylesheets="@../styles/sondage-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.SondageViewController">
   <top>
      <Pane prefHeight="150.0" prefWidth="1200.0" styleClass="header-section" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="469.0" layoutY="51.0" styleClass="header-title" text="Our Polls">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="419.0" layoutY="105.0" spacing="10.0" styleClass="breadcrumb">
               <children>
                  <Label styleClass="breadcrumb-item" text="Home" />
                  <Label styleClass="breadcrumb-separator" text="&gt;" />
                  <Label styleClass="breadcrumb-item-active" text="Polls" />
               </children>
            </HBox>
         </children>
      </Pane>
   </top>
   <center>
      <ScrollPane fitToWidth="true" styleClass="content-section" BorderPane.alignment="CENTER">
         <content>
            <HBox prefHeight="600.0" prefWidth="1180.0" spacing="20.0">
               <children>
                  <VBox fx:id="sondagesContainer" prefHeight="600.0" prefWidth="800.0" spacing="20.0" styleClass="polls-section">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Sidebar Section -->
                  <VBox prefHeight="600.0" prefWidth="360.0" spacing="20.0" styleClass="sidebar-section">
                     <children>
                        <VBox prefWidth="100.0" styleClass="poll-creation-container">
                           <children>
                              <Label styleClass="section-title" text="Create a Poll">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets bottom="15.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="pollQuestionField" promptText="Type your question here" styleClass="input-box">
                                 <VBox.margin>
                                    <Insets bottom="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <Label styleClass="section-subtitle" text="Options">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Label>
                              <VBox fx:id="pollOptionsContainer" prefWidth="100.0" spacing="10.0" styleClass="options-container">
                                 <children>
                                    <TextField fx:id="option1Field" promptText="Option 1" styleClass="input-box" />
                                    <TextField fx:id="option2Field" promptText="Option 2" styleClass="input-box" />
                                 </children>
                              </VBox>
                              <Button fx:id="addOptionButton" mnemonicParsing="false" onAction="#handleAddOption" styleClass="add-option-button" text="+ Add option">
                                 <VBox.margin>
                                    <Insets bottom="15.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                              <VBox prefWidth="100.0" styleClass="admin-message">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Note: Ensure the question and options follow club rules." wrappingWidth="300.0">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Text>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets bottom="15.0" />
                                 </VBox.margin>
                              </VBox>
                              <Button fx:id="createPollButton" mnemonicParsing="false" onAction="#handleCreatePoll" styleClass="create-poll-button" text="Create Poll" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                        <Button fx:id="viewAllPollsButton" mnemonicParsing="false" prefWidth="320.0" styleClass="view-all-polls-button" text="View all polls">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Button>
                        <ComboBox fx:id="filterClubComboBox" prefWidth="320.0" promptText="Filter by club" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane> 