<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1300.0" styleClass="main-container" stylesheets="@../styles/poll-management-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.PollManagementController">
   <top>
      <Pane prefHeight="120.0" styleClass="header-section" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="550.0" layoutY="35.0" styleClass="header-title" text="All Polls">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="500.0" layoutY="85.0" spacing="10.0" styleClass="breadcrumb">
               <children>
                  <Label styleClass="breadcrumb-item" text="Home" />
                  <Label styleClass="breadcrumb-separator" text="&gt;" />
                  <Label styleClass="breadcrumb-item-active" text="Polls" />
               </children>
            </HBox>
         </children>
      </Pane>
   </top>
   <center>
      <VBox spacing="20.0" styleClass="content-section" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label styleClass="section-title" text="Poll Management">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Pane HBox.hgrow="ALWAYS" />
                  <TextField fx:id="searchField" prefWidth="300.0" promptText="Search polls..." styleClass="search-input" />
                  <Button fx:id="searchButton" mnemonicParsing="false" styleClass="search-button" text="Search" />
               </children>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" styleClass="back-button" text="Back" />
               </children>
            </HBox>
            
            <TableView fx:id="pollsTable" VBox.vgrow="ALWAYS" styleClass="poll-table">
               <columns>
                  <TableColumn fx:id="questionColumn" prefWidth="500.0" styleClass="poll-table-header" text="Question" />
                  <TableColumn fx:id="optionsColumn" prefWidth="400.0" styleClass="poll-table-header" text="Options" />
                  <TableColumn fx:id="dateColumn" prefWidth="180.0" styleClass="poll-table-header" text="Date Created" />
                  <TableColumn fx:id="actionsColumn" prefWidth="180.0" styleClass="poll-table-header" text="Actions" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <Pane fx:id="toastContainer" prefHeight="40.0" styleClass="toast-container" visible="false">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" styleClass="toast-message">
                     <children>
                        <Label styleClass="toast-text" text="Action completed successfully!" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" styleClass="toast-close-button" text="Ã—" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </Pane>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane> 