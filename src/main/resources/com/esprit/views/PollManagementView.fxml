<BorderPane prefHeight="750.0" prefWidth="1200.0" styleClass="main-container" stylesheets="@../styles/poll-management-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.PollManagementController">
   <top>
      <Pane prefHeight="150.0" prefWidth="1200.0" styleClass="header-section" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="469.0" layoutY="51.0" styleClass="header-title" text="All Polls">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="419.0" layoutY="105.0" spacing="10.0" styleClass="breadcrumb">
               <children>
                  <Label styleClass="breadcrumb-item" text="Home" />
                  <Label styleClass="breadcrumb-separator" text="&gt;" />
                  <Label styleClass="breadcrumb-item-active" text="Polls" />
               </children>
            </HBox>
         </children>
      </Pane>
   </top>
   <center>
      <ScrollPane fitToWidth="true" styleClass="content-section" BorderPane.alignment="CENTER">
         <content>
            <VBox prefWidth="1180.0" styleClass="admin-container">
               <children>
                  <Label styleClass="section-title" text="Poll Management">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  
                  <HBox alignment="CENTER" spacing="15.0">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="backButton" mnemonicParsing="false" styleClass="back-button" text="Back">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <TextField fx:id="searchField" prefWidth="250.0" promptText="Search polls..." styleClass="search-input" />
                              <Button fx:id="searchButton" mnemonicParsing="false" styleClass="search-button" text="Search" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  
                  <TableView fx:id="pollsTable" prefHeight="450.0" prefWidth="1140.0" styleClass="poll-table" fixedCellSize="50.0">
                     <columns>
                        <TableColumn fx:id="questionColumn" prefWidth="400.0" styleClass="poll-table-header" text="Question" />
                        <TableColumn fx:id="optionsColumn" prefWidth="320.0" styleClass="poll-table-header" text="Options" />
                        <TableColumn fx:id="dateColumn" prefWidth="150.0" styleClass="poll-table-header" text="Date Created" />
                        <TableColumn fx:id="actionsColumn" prefWidth="180.0" styleClass="poll-table-header" text="Actions" />
                     </columns>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </TableView>
                  
                  <!-- Toast notification placeholder -->
                  <Pane fx:id="toastContainer" prefHeight="40.0" prefWidth="200.0" styleClass="toast-container" visible="false">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="300.0" styleClass="toast-message">
                           <children>
                              <Label styleClass="toast-text" text="Action completed successfully!" />
                              <Pane HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" styleClass="toast-close-button" text="Ã—">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </Pane>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
