<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #F8F8F8;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.ProduitViewController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #6200EE;">
               <children>
                  <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Catalogue des Produits">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="btnAddProduct" mnemonicParsing="false" onAction="#showAddProductDialog" style="-fx-background-color: #03DAC5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;" text="Ajouter un Produit">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnPanier" mnemonicParsing="false" onAction="#voirPanier" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Mon Panier (0)">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnAdmin" mnemonicParsing="false" onAction="#goToAdmin" style="-fx-background-color: white; -fx-text-fill: #6200EE; -fx-font-weight: bold; -fx-background-radius: 20;" text="Administration">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                           </padding>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);">
               <children>
                  <Label style="-fx-font-size: 16px;" text="Filtrer par:">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="comboFilterClub" prefWidth="200.0" promptText="Tous les clubs" />
                  <Label style="-fx-font-size: 16px;" text="Recherche:">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtSearch" prefWidth="250.0" promptText="Rechercher un produit..." />
                  <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#searchProducts" style="-fx-background-color: #6200EE; -fx-text-fill: white;" text="Rechercher">
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
               <content>
                  <FlowPane fx:id="productContainer" hgap="20.0" style="-fx-background-color: #F8F8F8;" vgap="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>
            <VBox fx:id="emptyState" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" style="-fx-background-color: #F8F8F8;" visible="false">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-text-fill: #999999;" text="Aucun produit trouvé" />
                  <Label style="-fx-font-size: 16px; -fx-text-fill: #999999;" text="Modifiez vos critères de recherche ou essayez un autre club" textAlignment="CENTER" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#resetFilters" style="-fx-background-color: #6200EE; -fx-text-fill: white;" text="Réinitialiser les filtres">
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
