        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label fx:id="lblPrix" styleClass="product-price" />
                <Label fx:id="lblQuantity" styleClass="product-quantity" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
