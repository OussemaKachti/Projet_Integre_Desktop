<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.crud.AdminProduitController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #6200EE;" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Administration des Produits">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="btnShowCatalog" mnemonicParsing="false" onAction="#goToCatalog" style="-fx-background-color: white; -fx-text-fill: #6200EE; -fx-font-weight: bold; -fx-background-radius: 20;" text="Voir le Catalogue">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5;">
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
               <children>
                  <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Liste des Produits" />
                  <TextField fx:id="txtSearch" promptText="Rechercher un produit..." HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
                  <ComboBox fx:id="comboFilterClub" prefWidth="200.0" promptText="Filtrer par club" />
               </children>
            </HBox>
            
            <TableView fx:id="tableView" prefHeight="300.0" styleClass="table-view" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="50.0" style="-fx-alignment: CENTER;" text="ID" />
                  <TableColumn fx:id="colNom" prefWidth="200.0" text="Nom" />
                  <TableColumn fx:id="colPrix" prefWidth="100.0" style="-fx-alignment: CENTER_RIGHT;" text="Prix" />
                  <TableColumn fx:id="colQuantity" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Quantité" />
                  <TableColumn fx:id="colDescription" prefWidth="250.0" text="Description" />
                  <TableColumn fx:id="colClub" prefWidth="120.0" text="Club" />
                  <TableColumn fx:id="colCreatedAt" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Date Création" />
                  <TableColumn fx:id="colActions" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Actions" />
               </columns>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <Pagination fx:id="pagination" pageCount="1" />
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter / Modifier un Produit" />
            <Separator>
               <VBox.margin>
                  <Insets bottom="15.0" top="5.0" />
               </VBox.margin>
            </Separator>
            <GridPane hgap="15.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Nom du produit:" GridPane.halignment="RIGHT" />
                  <TextField fx:id="txtNom" promptText="Nom du produit" GridPane.columnIndex="1" />
                  <Label text="Prix (€):" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <TextField fx:id="txtPrix" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Quantité:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                  <TextField fx:id="txtQuantity" promptText="Quantité disponible" GridPane.columnIndex="3" />
                  <Label text="Club:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <ComboBox fx:id="comboClub" prefWidth="250.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <Label text="Description:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="TOP">
                     <GridPane.margin>
                        <Insets top="5.0" />
                     </GridPane.margin>
                  </Label>
                  <TextArea fx:id="txtDescription" prefHeight="80.0" prefWidth="200.0" promptText="Description du produit" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Image:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="TOP">
                     <GridPane.margin>
                        <Insets top="5.0" />
                     </GridPane.margin>
                  </Label>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="2">
                     <children>
                        <TextField fx:id="txtImage" promptText="Chemin de l'image" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBrowse" onAction="#browseImage" style="-fx-background-color: #6200EE; -fx-text-fill: white;" text="Parcourir" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
            <HBox alignment="CENTER" spacing="15.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" onAction="#saveProduit" style="-fx-background-color: #6200EE; -fx-text-fill: white; -fx-font-weight: bold;" text="Ajouter">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateProduit" style="-fx-background-color: #03DAC5; -fx-text-fill: white; -fx-font-weight: bold;" text="Modifier" visible="false">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#resetForm" style="-fx-background-color: #B00020; -fx-text-fill: white; -fx-font-weight: bold;" text="Annuler">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane> 