<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.esprit.controllers.crud.CommandeController"
      spacing="15">
<padding>
<Insets top="20" right="20" bottom="20" left="20"/>
</padding>


    <!-- Formulaire -->
    <HBox spacing="10">
        <VBox spacing="8">
            <Label text="Date de commande"/>
            <DatePicker fx:id="dateCommande"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Statut"/>
            <ComboBox fx:id="cbStatut" prefWidth="150"/>
        </VBox>

        <VBox alignment="BOTTOM_CENTER" spacing="8">
            <Button fx:id="btnSave" text="Enregistrer" minWidth="100"/>
            <Button fx:id="btnUpdate" text="Mettre Ã  jour" visible="false" minWidth="100"/>
            <Button fx:id="btnCancel" text="Annuler" minWidth="100"/>
        </VBox>
    </HBox>

    <Separator/>

    <!-- Tableau des commandes -->
    <TableView fx:id="tableCommandes" prefHeight="400">
        <columns>
            <TableColumn fx:id="colDate" text="Date"/>
            <TableColumn fx:id="colStatut" text="Statut"/>
            <TableColumn fx:id="colActions" text="Actions"/>
        </columns>
    </TableView>

</VBox>
