<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProfileController"
            stylesheets="@../styles/uniclubs.css">
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="header">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         
         <Label text="UNICLUBS" textFill="WHITE">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
         </Label>
         
         <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <!-- Dashboard button for admin users -->
            <Button fx:id="dashboardButton" onAction="#navigateToDashboard" 
                    text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white;">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            
            <Button fx:id="logoutButton" onAction="#handleLogout" 
                    text="Logout" style="-fx-background-color: white; -fx-text-fill: #00A0E3;" />
         </HBox>
      </HBox>
   </top>
   
   <center>
      <VBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <!-- Profile Image -->
            <AnchorPane prefHeight="120.0" prefWidth="120.0" styleClass="profile-image-container">
               <ImageView fx:id="profileImageView" fitHeight="120.0" fitWidth="120.0" 
                          pickOnBounds="true" preserveRatio="true" styleClass="profile-image" 
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               <Button fx:id="changeImageBtn" mnemonicParsing="false" onAction="#handleChangeImage" 
                       opacity="0.0" prefHeight="120.0" prefWidth="120.0" 
                       AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </AnchorPane>
            
            <!-- User Info -->
            <VBox alignment="CENTER_LEFT" spacing="5.0">
               <Label fx:id="usernameLabel" text="Nour balti" styleClass="title">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>
               
               <Label fx:id="userRoleLabel" styleClass="badge, badge-primary" text="NON_MEMBRE">
                  <padding>
                     <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                  </padding>
               </Label>
            </VBox>
            
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <Button fx:id="editProfileBtn" onAction="#handleEditProfile" 
                       styleClass="button-primary" text="Edit Profile">
                  <graphic>
                     <Label text="✏️" textFill="WHITE" />
                  </graphic>
               </Button>
            </HBox>
         </HBox>
         
         <!-- Tabs and Content -->
         <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <tabs>
               <!-- Profile Information Tab -->
               <Tab text="Profile Information">
                  <content>
                     <AnchorPane>
                        <children>
                           <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" 
                                 AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" 
                                 AnchorPane.topAnchor="20.0">
                              
                              <!-- Status Messages -->
                              <Label fx:id="profileInfoMessage" styleClass="alert-success" 
                                     text="Your profile has been updated successfully!" 
                                     visible="false" wrapText="true" />
                              <Label fx:id="profileInfoError" styleClass="alert-error" 
                                     text="An error occurred while updating your profile." 
                                     visible="false" wrapText="true" />
                              
                              <!-- Profile Information Cards -->
                              <VBox spacing="15.0">
                                 <VBox styleClass="card">
                                    <Label text="Name" styleClass="text-small, text-muted" />
                                    <Label fx:id="nameValueLabel" text="Nour balti" styleClass="title">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                 </VBox>
                                 
                                 <VBox styleClass="card">
                                    <Label text="Email" styleClass="text-small, text-muted" />
                                    <Label fx:id="emailValueLabel" text="baltinour118@gmail.com" styleClass="title">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                 </VBox>
                                 
                                 <VBox styleClass="card">
                                    <Label text="Phone" styleClass="text-small, text-muted" />
                                    <Label fx:id="phoneValueLabel" text="29103858" styleClass="title">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                 </VBox>
                              </VBox>
                           </VBox>
                        </children>
                     </AnchorPane>
                  </content>
               </Tab>
               
               <!-- Change Password Tab -->
               <Tab text="Change Password">
                  <content>
                     <AnchorPane>
                        <children>
                           <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" 
                                 AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" 
                                 AnchorPane.topAnchor="20.0">
                              <Label text="Change Password" styleClass="title">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                              
                              <!-- Status Messages -->
                              <Label fx:id="passwordSuccessMessage" styleClass="alert-success" 
                                     text="Your password has been updated successfully!" 
                                     visible="false" wrapText="true" />
                              <Label fx:id="passwordErrorMessage" styleClass="alert-error" 
                                     text="An error occurred while updating your password." 
                                     visible="false" wrapText="true" />
                              
                              <!-- Password Change Form -->
                              <VBox maxWidth="500.0" styleClass="card" spacing="20.0">
                                 <!-- Current Password -->
                                 <VBox styleClass="field-container">
                                    <Label text="Current Password" />
                                    <PasswordField fx:id="currentPasswordField" promptText="Enter current password" />
                                    <Label fx:id="currentPasswordError" styleClass="error-message" 
                                           visible="false" />
                                 </VBox>
                                 
                                 <!-- New Password -->
                                 <VBox styleClass="field-container">
                                    <Label text="New Password" />
                                    <PasswordField fx:id="newPasswordField" promptText="Enter new password" />
                                    <Label fx:id="newPasswordError" styleClass="error-message" 
                                           visible="false" />
                                    
                                    <!-- Password Requirements -->
                                    <VBox fx:id="passwordRequirementsBox" styleClass="password-requirements" 
                                          visible="false">
                                       <Label text="Password must include:" />
                                       <Label fx:id="lengthCheckLabel" text="• At least 8 characters" />
                                       <Label fx:id="uppercaseCheckLabel" text="• At least one uppercase letter" />
                                       <Label fx:id="lowercaseCheckLabel" text="• At least one lowercase letter" />
                                       <Label fx:id="numberCheckLabel" text="• At least one number" />
                                       <Label fx:id="specialCheckLabel" text="• At least one special character (#?!@$%^&amp;*-)" />
                                    </VBox>
                                 </VBox>
                                 
                                 <!-- Confirm Password -->
                                 <VBox styleClass="field-container">
                                    <Label text="Confirm Password" />
                                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" />
                                    <Label fx:id="confirmPasswordError" styleClass="error-message" 
                                           visible="false" />
                                 </VBox>
                                 
                                 <!-- Update Button -->
                                 <Button defaultButton="true" onAction="#handleUpdatePassword" 
                                         styleClass="button-primary" text="Update Password" 
                                         maxWidth="200.0" />
                              </VBox>
                           </VBox>
                        </children>
                     </AnchorPane>
                  </content>
               </Tab>
            </tabs>
         </TabPane>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" styleClass="header-light">
         <Label styleClass="text-muted, text-small" 
                text="© 2024 UNICLUBS - All rights reserved" />
      </HBox>
   </bottom>
</BorderPane>