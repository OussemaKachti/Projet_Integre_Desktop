<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.EditProfileController"
            stylesheets="@../styles/uniclubs.css">
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="header">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         
         <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
            <Image url="@../images/uniclubs_logo_white.png"/>
         </ImageView>
         
         <Label text="Edit Profile" textFill="WHITE">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
            <HBox.margin>
               <Insets left="15.0" />
            </HBox.margin>
         </Label>
      </HBox>
   </top>
   
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         
         <!-- Title -->
         <Label styleClass="title" text="Update Your Profile">
            <font>
               <Font name="System Bold" size="22.0" />
            </font>
         </Label>
         
         <Label styleClass="subtitle" text="Make changes to your personal information">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         
         <!-- Error message area -->
         <Label fx:id="errorMessageLabel" styleClass="alert-error"
                text="Please correct the errors below" visible="false" wrapText="true" />
         
         <!-- Edit Form -->
         <VBox maxWidth="550.0" styleClass="card" spacing="20.0">
            <!-- Name field -->
            <VBox styleClass="field-container">
               <Label text="Full Name" />
               <TextField fx:id="nameField" promptText="First Name Last Name" />
               <Label fx:id="nameError" styleClass="error-message" 
                      visible="false" />
            </VBox>
            
            <!-- Email field -->
            <VBox styleClass="field-container">
               <Label text="Email Address" />
               <TextField fx:id="emailField" promptText="Your email address" />
               <Label fx:id="emailError" styleClass="error-message" 
                      visible="false" />
            </VBox>
            
            <!-- Phone field -->
            <VBox styleClass="field-container">
               <Label text="Phone Number" />
               <TextField fx:id="phoneField" promptText="Your phone number" />
               <Label fx:id="phoneError" styleClass="error-message" 
                      visible="false" />
               <Label styleClass="text-small, text-muted" 
                      text="Tunisian format (e.g. +21655123456, 55123456)" />
            </VBox>
            
            <!-- Password verification -->
            <VBox styleClass="field-container">
               <HBox alignment="CENTER_LEFT" spacing="5.0">
                  <Label text="Current Password" />
                  <Label text="*" textFill="#f44336" />
               </HBox>
               <PasswordField fx:id="currentPasswordField" promptText="Enter your current password" />
               <Label fx:id="passwordError" styleClass="error-message" 
                      visible="false" />
               <Label styleClass="text-small, text-muted" 
                      text="Enter your current password to confirm these changes" />
            </VBox>
            
            <!-- Action buttons -->
            <HBox alignment="CENTER" spacing="15.0">
               <Button fx:id="cancelButton" onAction="#handleCancel" 
                       styleClass="button-secondary" text="Cancel" 
                       prefWidth="130.0" />
               <Button fx:id="updateButton" defaultButton="true" onAction="#handleUpdate" 
                       styleClass="button-primary" text="Update Profile" 
                       prefWidth="130.0" />
            </HBox>
         </VBox>
      </VBox>
   </center>
</BorderPane>