<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controllers.BaseController"
      stylesheets="@../styles/base.css">

    <!-- Header -->
    <VBox styleClass="header">
        <!-- Top Header -->
        <HBox styleClass="header-top">
            <HBox styleClass="header-info" HBox.hgrow="ALWAYS">
                <Label text="TUNISIE" />
            </HBox>
            
            <!-- Login/User Section -->
            <HBox styleClass="header-user">
                <fx:include source="components/userMenu.fxml"/>
                <Button text="Competition" styleClass="header-btn"/>
            </HBox>
        </HBox>

        <!-- Main Header -->
        <HBox styleClass="header-main">
            <!-- Logo -->
            <ImageView fx:id="logoImage" fitHeight="50" fitWidth="150"/>
            
            <!-- Navigation Menu -->
            <HBox styleClass="main-menu">
                <Button text="Home"/>
                <MenuButton text="Clubs">
                    <items>
                        <MenuItem text="Our clubs"/>
                        <MenuItem text="My club"/>
                        <MenuItem text="Polls"/>
                    </items>
                </MenuButton>
                <MenuButton text="Events">
                    <items>
                        <MenuItem text="Our Events"/>
                        <MenuItem text="My Events"/>
                    </items>
                </MenuButton>
                <!-- Autres menus... -->
            </HBox>
            
            <!-- Search Bar -->
            <HBox styleClass="search-bar">
                <TextField promptText="Search..."/>
                <Button styleClass="search-btn"/>
            </HBox>
        </HBox>
    </VBox>

    <!-- Content Area - où les autres vues seront chargées -->
    <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS"/>

    <!-- Footer -->
    <VBox styleClass="footer">
        <HBox styleClass="footer-content">
            <!-- Logo Footer -->
            <VBox styleClass="footer-logo">
                <ImageView fx:id="footerLogo" fitHeight="50" fitWidth="150"/>
                <Label text="Uniclubs is a platform for managing social and cultural clubs and events"/>
            </VBox>
            
            <!-- Quick Links -->
            <VBox styleClass="footer-links">
                <Label text="Quick Links" styleClass="footer-title"/>
                <Hyperlink text="Clubs"/>
                <Hyperlink text="Events"/>
                <Hyperlink text="Products"/>
                <Hyperlink text="Competitions"/>
            </VBox>
            
            <!-- Newsletter -->
            <VBox styleClass="footer-newsletter">
                <Label text="Sign up" styleClass="footer-title"/>
                <Label text="Receive all newest events of our clubs"/>
                <HBox styleClass="subscribe-form">
                    <TextField promptText="Email"/>
                    <Button text="Subscribe" styleClass="btn-subscribe"/>
                </HBox>
            </VBox>
        </HBox>
        
        <!-- Copyright -->
        <HBox styleClass="footer-bottom">
            <Label text="© 2025 UNICLUBS. All Rights Reserved"/>
        </HBox>
    </VBox>
</VBox>